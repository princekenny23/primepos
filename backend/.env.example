# ============================================
# CRITICAL - MUST SET FOR PRODUCTION
# ============================================

# Security
# Generate a random 50+ character string for production
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production-please-use-strong-key

DEBUG=False

# Domain configuration (space-separated)
ALLOWED_HOSTS=api.yourdomain.com,yourdomain.com

# Database (CRITICAL - production database URL)
# Example: postgresql://user:password@host.com:5432/primepos_prod
DATABASE_URL=postgresql://user:password@localhost:5432/primepos

# CORS configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================
# OPTIONAL BUT RECOMMENDED
# ============================================

# Logging
LOG_LEVEL=INFO

# JWT Token Configuration
JWT_SECRET_KEY=<same-as-SECRET_KEY-or-generate-new>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 days in seconds

# Email Configuration (for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USE_TLS=True

# Error Tracking (Sentry)
SENTRY_DSN=

# Static Files
STATIC_ROOT=/var/www/primepos/staticfiles/
MEDIA_ROOT=/var/www/primepos/media/

# Security Headers
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================
# DEVELOPMENT ONLY (local testing)
# ============================================
