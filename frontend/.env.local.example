# Local Development Environment Configuration
# Copy this file to .env.local to use it
# cp .env.local.example .env.local

# Local backend API URL (Django development server)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Enable real API calls (not mock data)
NEXT_PUBLIC_USE_REAL_API=true

# Application name
NEXT_PUBLIC_APP_NAME=PrimePOS

# Instructions:
# 1. Make sure your Django backend is running: cd backend && python manage.py runserver
# 2. Start the frontend: cd frontend && npm run dev
# 3. Visit http://localhost:3000
